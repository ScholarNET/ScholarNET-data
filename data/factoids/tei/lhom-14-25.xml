            <!-- Here is how the factoid URI and number might work. -->
            <div type="factoid" subtype="birthDate" xml:id="factoid-1" resp="#nloehr">
                <idno type="URI">https://usaybia.net/factoid/14-25-1</idno>
                <listPerson>
                    <person>
                        <persName ref="https://usaybia.net/person/2126"/>
                        <birth>
                            <note> needs to be determined via planetary constellations!</note> 
                        </birth>
                    </person>
                </listPerson>
                <!-- This is the reference that links the factoid to the text -->
                <!-- If we add numbered divs for the numbered subsections (like 14.25.1) 
                we could use this kind of reference, but we would have to make sure the URN 
                resolves correctly with the additional number on the end. -->
                <bibl type="urn">
                    <ptr target="urn:cts:arabicLit:0668IbnAbiUsaibia.Tabaqatalatibba.lhom-ed-ara1:14.25.1"/>
                </bibl>
                <!-- Or we could do it like this if it isn't possible to resolve the additional numbers 
                on the end. -->
                <bibl type="urn">
                    <ptr target="urn:cts:arabicLit:0668IbnAbiUsaibia.Tabaqatalatibba.lhom-ed-ara1:14.25"/>
                    <citedRange unit="part">1</citedRange>
                </bibl>
            </div>
            <div type="factoid" subtype="birthPlace" xml:id="factoid-67" resp="#nloehr">
                <idno type="URI">http://syriaca.org/spear/819-67</idno>
                <listPerson>
                    <person>
                        <persName ref="https://usaybia.net/person/2126"/>
                        <birth><placeName ref="https://usaybia.net/place21"/><note type="desc"
                            >born in "Old Cairo" at 30° latitude and 55° longitude. According to Usaybia "Giza".</note></birth>
                    </person>
                </listPerson>
            </div>
            <div type="factoid" subtype="deathDate" xml:id="factoid-155" resp="#nloehr">
                <idno type="URI">http://syriaca.org/spear/8559-155</idno>
                <listPerson>
                    <person>
                        <persName ref="https://usaybia.net/person/2126"/>
                        <death>
                            <choice>
                                <reg><date when="1061" calendar="Gregorian">1061</date></reg>
                                <orig><date when="0453" datingMethod="Hijri"></date></orig>
                                <note type="desc">during the caliphate of al-Mustanṣir bi-Allāh Abū Tamīm Maʿadd ibn al-Ẓāhir li-Iʿzāz al-Dīn al-Ḥākim
                                    <persName ref="https://usaybia.net/person/???"></persName></note>
                            </choice>
                        </death>
                    </person>
                </listPerson>
            </div>
            <div type="factoid" subtype="deathPlace" xml:id="factoid-15" resp="#nloehr">
                <idno type="URI">http://syriaca.org/spear/845-15</idno>
                <listPerson>
                    <person>
                        <persName ref="https://usaybia.net/person/2126"/>
                        <death><placeName ref="http://syriaca.org/place/2761"/><note type="desc"
                            ><persName ref="http://syriaca.org/person/2621"
                                >Egypt</persName></note></death>
                    </person>
                </listPerson>
            </div>
            <div type="factoid" subtype="education" xml:id="factoid-5" resp="#nloehr">
                <idno type="URI">http://syriaca.org/spear/842-5</idno>
                <listPerson>
                    <person>
                        <persName ref="https://usaybia.net/person/2126"/>
                        <education ana="http://usaybia.net/education/medicine"><note type="desc"
                            > when I reached the age of 14 I moved to the<placeName ref="http://usaybia.net/place/Cairo">capital</placeName> 
                            I undertook the study of medicine</note></education>
                        <education ana="http://usaybia.net/education/philosophy"><note type="desc"
                            > when I reached the age of 14 I moved to the<placeName ref="http://usaybia.net/place/Cairo">capital</placeName> 
                            I undertook the study of medicine and philosophy</note></education>
                    </person>
                </listPerson>
            </div>
            <div type="factoid" subtype="mentalState" xml:id="factoid-3" resp="#nloehr">
                <idno type="URI">http://syriaca.org/spear/799-3</idno>
                <listPerson>
                    <person>
                        <persName ref="https://usaybia.net/person/2126"/>
                        <state type="mental" ana="https://usaybia.net/mental/deteriorating">
                            <note type="desc"><persName ref="https://usaybia.net/person/2126"
                                >his</persName> mental faculties deteriorated <date>after the period of famine
                                    <reg><date notBefore="1053" notAfter="1061" calendar="Gregorian">1053/1061</date></reg></date></note>
                        </state>
                    </person>
                </listPerson>
            </div>
            <div type="factoid" subtype="occupation" xml:id="factoid-12" resp="#nloehr">
                <idno type="URI">http://syriaca.org/spear/3071-12</idno>
                <listPerson>
                    <person>
                        <persName ref="https://usaybia.net/person/2126"/>
                        <occupation ana="https://usaybia.net/keyword/medicine"></occupation>
                        <occupation ana="https://usaybia.net/keyword/astrologer"><note><persName ref="https://usaybia.net/person/2126"/>I
                            made a living by practising the art of astrology <reg><date cert="low">before 32</date></reg></note></occupation>
                        <occupation ana="https://usaybia.net/keyword/teacher"></occupation>
                    </person>
                </listPerson>
            </div>
            <div type="factoid" subtype="residence" xml:id="factoid-5" resp="#nloehr">
                <idno type="URI">http://syriaca.org/spear/804-5</idno>
                <listPerson>
                    <person>
                        <persName ref="https://usaybia.net/person/2126"/>
                        <residence><placeName ref="https://usaybia.net/place/Fustat"/><note type="desc"
                            ><persName ref="https://usaybia.net/person/2126">Ibn Ridwan's</persName>
                            house was in <placeName ref="https://usaybia.net/place/Qasr_al-Sham"
                                >Qaṣr al-Shamʿ quarter of Fustat</placeName>.</note></residence>
                    </person>
                </listPerson>
            </div>
            <div type="factoid" subtype="event" xml:id="factoid-27" resp="#nloehr">
                <idno type="URI">http://syriaca.org/spear/8559-27</idno>
                <listEvent>
                    <event ana="https://usaybia.net/keyword/crises">
                        <desc> In <choice>
                            <reg><date when="1053" calendar="Gregorian">1053</date></reg>
                            <orig><date when-custom="445"
                                datingMethod="Hijri">445</date></orig>
                        </choice>, <persName ref="https://usaybia.net/person/Ibn Butlan"> Ibn Butlan
                        </persName> reports about a shortage of supplies in <placeName ref="https://usaybia.net/place/Egypt">Egypt</placeName>
                            the level of the Nile fell and the shortage of food increased, followed by a great pestilence in
                            <reg><date when="1055" calendar="Gregorian">1055</date></reg>
                            <orig><date when-custom="447"
                                datingMethod="Hijri">447</date></orig>
                        </desc>
                    </event>
                </listEvent>
            </div>
            <div type="factoid" subtype="event" xml:id="factoid-27" resp="#nloehr">
                <idno type="URI">http://syriaca.org/spear/8559-27</idno>
                <listEvent>
                    <event ana="https://usaybia.net/keyword/crime">
                        <desc> In <choice>
                            <reg><date notBefore="1053" notAfter="1061" calendar="Gregorian"
                                srophe:computed-start="1053"srophe:computed-end="1061">1053/1061</date></reg>
                            <orig><date notBefore="445" notAfter="453" calendar="Hijri"
                                srophe:computed-start="445"
                                srophe:computed-end="453">445/453"></date></orig>
                        </choice>, <persName ref="https://usaybia.net/person/orphan of Ibn Ridwan"> an orphan girl
                        </persName> whom he <persName ref="https://usaybia.net/person/2126"/>raised in his <placeName ref="http://syriaca.org/place/Qasr_al-Sham">house</placeName>
                            took valuables and gold worth about 20.000 Dinar and fled.
                        </desc>
                    </event>
                </listEvent>
            </div>
            <div type="factoid" subtype="relation" xml:id="factoid-7" resp="#nloehr">
                <idno type="URI">http://syriaca.org/spear/3044-7</idno>
                <listRelation>
                    <relation ref="snap:EnmityFor" mutual="https://usaybia.net/person/2126 https://usaybia.net/person/Ibn Butlan">
                    </relation>
                </listRelation>
            </div>
            <div type="factoid" subtype="relation" xml:id="factoid-7" resp="#nloehr">
                <idno type="URI">http://syriaca.org/spear/3044-7</idno>
                <listRelation>
                    <relation ref="snap:EnmityFor" mutual="https://usaybia.net/person/2126 https://usaybia.net/person/Hunayn_ibn_Ishaq">
                    </relation>
                </listRelation>
            </div>
            <div type="factoid" subtype="relation" xml:id="factoid-7" resp="#nloehr">
                <idno type="URI">http://syriaca.org/spear/3044-7</idno>
                <listRelation>
                    <relation ref="snap:EnmityFor" mutual="https://usaybia.net/person/2126 https://usaybia.net/person/Ibn_al-Tayyib">
                    </relation>
                </listRelation>
            </div>
            <div type="factoid" subtype="relation" xml:id="factoid-7" resp="#nloehr">
                <idno type="URI">http://syriaca.org/spear/3044-7</idno>
                <listRelation>
                    <relation ref="snap:EnmityFor" mutual="https://usaybia.net/person/2126 https://usaybia.net/person/al-Razi">
                    </relation>
                </listRelation>
            </div>
            <div type="factoid" subtype="relation" xml:id="factoid-7" resp="#nloehr">
                <idno type="URI">http://syriaca.org/spear/3044-7</idno>
                <listRelation>
                    <relation ref="snap:ParentOf" active="https://usaybia.net/person/2126" passive="https://usaybia.net/person/orphan_girl">
                    </relation>
                </listRelation>
            </div>
            <div type="factoid" subtype="relation" xml:id="factoid-7" resp="#nloehr">
                <idno type="URI">http://syriaca.org/spear/3044-7</idno>
                <listRelation>
                    <relation ref="snap:ProfessionalRelationship" mutual="https://usaybia.net/person/2126 https://usaybia.net/person/al-Hakim">
                    </relation>
                </listRelation>
            </div>
            <div type="factoid" subtype="relation" xml:id="factoid-7" resp="#nloehr">
                <idno type="URI">http://syriaca.org/spear/3044-7</idno>
                <listRelation>
                    <relation ref="snap:ProfessionalRelationship" mutual="https://usaybia.net/person/Usaybia_himself https://usaybia.net/person/Muhammad of Malaga">
                        <desc>Abū ʿAbd Allāh Muḥammad of <placeName ref="https://usaybia.net/place/Malaga">Malaga [in al-Andalus]</placeName>, 
                            the <occupation ref="https://usaybia.net/occupation/scribe">copyist,</occupation> has related to me</desc>
                    </relation>
                </listRelation>
            </div>
